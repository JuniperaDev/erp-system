    <changeSet id="20250807201500-1" author="devin">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="asset_warranty_assignment"/>
            <not>
                <columnExists tableName="asset_warranty_assignment" columnName="assignment_details"/>
            </not>
        </preConditions>
        
        <comment>Add missing assignment_details column to asset_warranty_assignment table</comment>
        
        <addColumn tableName="asset_warranty_assignment">
            <column name="assignment_details" type="varchar(1000)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
