<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Rename IFRS16LeaseContract table to DetailedLeaseContract
        This migration standardizes entity naming by removing technical prefixes
    -->
    <changeSet id="20250804193122-1" author="devin">
        <!-- Add precondition to check if source table exists -->
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="ifrs16lease_contract"/>
        </preConditions>
        
        <comment>Rename ifrs16lease_contract table to detailed_lease_contract</comment>
        
        <!-- Rename the main table -->
        <renameTable oldTableName="ifrs16lease_contract" newTableName="detailed_lease_contract"/>
        
        <rollback>
            <renameTable oldTableName="detailed_lease_contract" newTableName="ifrs16lease_contract"/>
        </rollback>
    </changeSet>

    <changeSet id="20250804193122-2" author="devin">
        <!-- Update sequence name if it exists - using database-agnostic approach -->
        <preConditions onFail="MARK_RAN">
            <sequenceExists sequenceName="ifrs16lease_contract_seq"/>
        </preConditions>
        
        <comment>Rename sequence from ifrs16lease_contract_seq to detailed_lease_contract_seq</comment>
        
        <dropSequence sequenceName="ifrs16lease_contract_seq"/>
        <createSequence sequenceName="detailed_lease_contract_seq" startValue="1" incrementBy="50"/>
        
        <rollback>
            <dropSequence sequenceName="detailed_lease_contract_seq"/>
            <createSequence sequenceName="ifrs16lease_contract_seq" startValue="1" incrementBy="50"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
